{
	"name": "imba-shell",
	"version": "0.3.0",
	"description": "Interactive debugger and REPL for Imba.",
	"keywords": [
		"imba",
		"imba-shell",
		"shell",
		"repl",
		"debugger"
	],
	"author": "Donald Pakkies",
	"license": "MIT",
	"main": "lib/index.js",
	"types": "types/index.d.ts",
	"bugs": "https://github.com/donaldp/imba-shell/issues",
	"homepage": "https://github.com/donaldp/imba-shell",
	"repository": "https://github.com/donaldp/imba-shell",
	"scripts": {
		"build": "npm run imba:build && npm run ts:build",
		"imba:build": "imbac src --output=lib --platform=node --format=cjs --clean",
		"imba:watch": "imbac -w src --output=lib --platform=node --format=cjs --clean",
		"ts:build": "tsc",
		"ts:watch": "tsc -w",
		"test": "jest --roots test",
		"test:watch": "jest --watchAll --roots test"
	},
	"bin": {
		"imba-r": "./bin/runtime",
		"imba-runtime": "./bin/runtime",
		"imba-shell": "./bin/repl",
		"imbar": "./bin/runtime",
		"imbas": "./bin/repl",
		"ir": "./bin/runtime"
	},
	"dependencies": {
		"imba": "^2.0.0-alpha.201"
	},
	"devDependencies": {
		"@types/jest": "^27.4.1",
		"@types/node": "^17.0.21",
		"jest": "^27.5.1",
		"typescript": "^4.5.5"
	}
}
